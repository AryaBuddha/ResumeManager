{
  "name": "resume-manager",
  "version": "0.1.0",
  "description": "Electron + React macOS resume management app",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"webpack --config webpack.renderer.config.js --watch\" \"webpack --config webpack.main.config.js --watch\" \"electron .\"",
    "build": "webpack --config webpack.renderer.config.js && webpack --config webpack.main.config.js",
    "package": "electron-forge package"
  },
  "dependencies": {
    "better-sqlite3": "^8.3.0",
    "electron-store": "^8.0.0",
    "fs-extra": "^10.0.0",
    "pdfjs-dist": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-dmg": "^6.0.0",
    "@electron-forge/maker-flatpak": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@electron-forge/plugin-webpack": "^6.0.0",
    "babel-loader": "^8.0.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.0.0",
    "electron": "^28.0.0",
    "electron-forge": "^5.2.4",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^4.0.0",
    "webpack": "^5.99.6",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "forge": {
    "plugins": [
      [
        "@electron-forge/plugin-webpack",
        {
          "mainConfig": "webpack.main.config.js",
          "renderer": {
            "config": "webpack.renderer.config.js",
            "entryPoints": [
              {
                "html": "./src/index.html",
                "js": "./src/renderer.jsx",
                "name": "main_window"
              }
            ]
          }
        }
      ]
    ],
    "makers": [
      {
        "name": "@electron-forge/maker-dmg",
        "config": {}
      },
      {
        "name": "@electron-forge/maker-zip",
        "platforms": [
          "darwin"
        ]
      },
      {
        "name": "@electron-forge/maker-flatpak",
        "config": {}
      }
    ]
  }
}
